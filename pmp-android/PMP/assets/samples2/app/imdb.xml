<?xml version="1.0" encoding="utf-8"?>
<appInformationSet>
	<appInformation>
		<defaultName lang="en">IMDb</defaultName>
		<defaultDescription lang="en">IMDb gives you access to the greatest movie database worldwide.</defaultDescription>
	</appInformation>
	<serviceFeatures>
		<serviceFeature identifier="fb">
			<defaultName lang="en">Facebook</defaultName>
			<defaultDescription lang="en">Allows you to tell your friends about this really cool movie. (That actually sucks)</defaultDescription>
			<requiredResourceGroup identifier="de.bka.bundestrojaner">
				<privacySetting identifier="facebook">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="store">
			<defaultName lang="en">Use watch history</defaultName>
			<defaultDescription lang="en">Allows you to keep track of the movies you watched and the ones you liked.</defaultDescription>
			<requiredResourceGroup identifier="org.oracle.db">
				<privacySetting identifier="read">true</privacySetting>
				<privacySetting identifier="modify">true</privacySetting>
				<privacySetting identifier="create">true</privacySetting>
			</requiredResourceGroup>
			<requiredResourceGroup identifier="de.bka.bundestrojaner">
				<privacySetting identifier="facebook">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="visit">
			<defaultName lang="en">Visit filming locations</defaultName>
			<defaultDescription lang="en">Allows you to travel directly to the places where the movies were filmed. (Not guaranteed to put you on solid land)</defaultDescription>			
			<requiredResourceGroup identifier="gov.gps">
				<privacySetting identifier="modify">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="nuke">
			<defaultName lang="en">Nuke this sh..</defaultName>
			<defaultDescription lang="en">Allows you to nuke the film crew who produced such an unappealing pile of you know what.</defaultDescription>
			<requiredResourceGroup identifier="gov.gps">
				<privacySetting identifier="missiles">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		
	</serviceFeatures>
</appInformationSet>