<?xml version="1.0" encoding="utf-8"?>
<appInformationSet>
	<appInformation>
		<defaultName lang="en">Wikipedia</defaultName>
		<defaultDescription lang="en">Become access to the greatest lexica in the world. I don't know how that works, but I'm not making that up. You can actually become access to wikipedia. Although I don't know what it feels like to become something so intangible like access.</defaultDescription>
	</appInformation>
	<serviceFeatures>
		<serviceFeature identifier="fb">
			<defaultName lang="en">Facebook</defaultName>
			<defaultDescription lang="en">Tell all your friends what you are reading.</defaultDescription>			
			<requiredResourceGroup identifier="de.bka.bundestrojaner">
				<privacySetting identifier="facebook">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="doctor">
			<defaultName lang="en">Get disease information</defaultName>
			<defaultDescription lang="en">As a result of rationalization you cannot go to the doctor. Read some disease articles authorized by your health insurance instead.</defaultDescription>			
			<requiredResourceGroup identifier="de.bka.bundestrojaner">
				<privacySetting identifier="kk">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="local">
			<defaultName lang="en">Find local articles</defaultName>
			<defaultDescription lang="en">With this you can find articles about things right next to you.</defaultDescription>			
			<requiredResourceGroup identifier="gov.gps">
				<privacySetting identifier="findloc">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="donate">
			<defaultName lang="en">Donate</defaultName>
			<defaultDescription lang="en">You all know the picture of Jimmy Wales, don't you.</defaultDescription>
			<requiredResourceGroup identifier="com.americanexpress.leyman">
				<privacySetting identifier="balance">true</privacySetting>
				<privacySetting identifier="charge">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		
	</serviceFeatures>
</appInformationSet>