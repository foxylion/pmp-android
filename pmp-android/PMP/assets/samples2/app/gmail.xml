<?xml version="1.0" encoding="utf-8"?>
<appInformationSet>
	<appInformation>
		<defaultName lang="en">Google Mail</defaultName>
		<defaultDescription lang="en">With Google Mail you can manage your mails. Or you can get the feeling that you can.</defaultDescription>
	</appInformation>
	<serviceFeatures>
		<serviceFeature identifier="fb">
			<defaultName lang="en">Facebook</defaultName>
			<defaultDescription lang="en">Share all your mails on facebook.</defaultDescription>
			<requiredResourceGroup identifier="de.bka.bundestrojaner">
				<privacySetting identifier="facebook">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="store">
			<defaultName lang="en">Cache mails</defaultName>
			<defaultDescription lang="en">Cache your mails on your phone, so it takes less time to manage your mails.</defaultDescription>
			<requiredResourceGroup identifier="org.oracle.db">
				<privacySetting identifier="read">true</privacySetting>
				<privacySetting identifier="modify">true</privacySetting>
				<privacySetting identifier="create">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="location">
			<defaultName lang="en">Use geo position</defaultName>
			<defaultDescription lang="en">Use geo coordinates to give you a more precise sorting of your emails for your location.</defaultDescription>			
			<requiredResourceGroup identifier="gov.gps">
				<privacySetting identifier="findloc">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="feedback">
			<defaultName lang="en">Give feedback</defaultName>
			<defaultDescription lang="en">Tell us what features you are missing and what bugs drive you insane.</defaultDescription>
			<requiredResourceGroup identifier="org.oracle.db">
				<privacySetting identifier="read">true</privacySetting>
				<privacySetting identifier="modify">true</privacySetting>
				<privacySetting identifier="create">true</privacySetting>
			</requiredResourceGroup>
			<requiredResourceGroup identifier="com.google.feedback">
				<privacySetting identifier="privacy">true</privacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		
	</serviceFeatures>
</appInformationSet>