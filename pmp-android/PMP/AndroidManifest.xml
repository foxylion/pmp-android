<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.unistuttgart.ipvs.pmp" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="7" />

	<!-- The android:name ensures that the Application is loaded properly -->
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:name="de.unistuttgart.ipvs.pmp.PMPApplication">

		<!-- Activities can be declared here -->
		<activity android:name=".gui2.activities.MainActivity"
			android:label="PMP v2" android:theme="@android:style/Theme.NoTitleBar" android:icon="@drawable/icon">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		
		<!-- Starting OLD Activities for OLD gui... -->
		<activity android:name=".gui.activities.StartActivity"
			android:label="PMP" android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".gui.activities.ApplicationsActivity"
			android:label="Applications">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".gui.activities.RessourcesActivity"
			android:label="Ressources">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".gui.activities.ServiceLvlActivity"
			android:label="Service Levels">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".model.activities.PMPDeveloperConsoleActivity"
			android:label="PMP Dev Console" android:icon="@drawable/icon_dev_console">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<!-- END of the OLD Activities for the OLD gui -->
		    
		    
		<!-- // end of Activity declaration -->

		<!-- Broadcast Receivers -->
		<receiver android:name=".broadcastreceiver.ResourceGroupInstall">
			<intent-filter>
				<action android:name="android.intent.action.PACKAGE_ADDED" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:scheme="package" />
			</intent-filter>
		</receiver>
		<!-- // end of Broadcast Receivers -->

		<!-- The PMPService can be loaded by using the intent action name declared 
			3 lines below -->
		<service android:name=".service.PMPService" android:exported="true">
			<intent-filter>
				<action android:name="de.unistuttgart.ipvs.pmp.service.PMPService"></action>
			</intent-filter>
		</service>
	</application>
</manifest>