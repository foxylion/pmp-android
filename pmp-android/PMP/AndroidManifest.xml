<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.unistuttgart.ipvs.pmp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- The android:name ensures that the Application is loaded properly -->
    <application
        android:name=".PMPApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >

        <!-- Activities can be declared here -->
        <activity
            android:name=".gui.main.ActivityMain"
            android:icon="@drawable/icon"
            android:label="PMP"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.main.ActivityAbout"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".gui.settings.ActivitySettings"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".gui.app.ActivityApps"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".gui.app.ActivityApp"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".gui.preset.PresetsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".gui.preset.PresetActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".gui.resourcegroup.ActivityRGs"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" />

        <!-- Tabs -->
        <activity android:name=".gui.app.TabDetails" />
        <activity android:name=".gui.app.TabPresets" />
        <activity android:name=".gui.app.TabServiceFeatures" />
        <activity android:name=".gui.preset.PresetAppsTab" />
        <activity android:name=".gui.preset.PresetPSsTab" />
        <activity android:name=".gui.resourcegroup.TabRGsAvailable" />
        <activity android:name=".gui.resourcegroup.TabRGsInstalled" />

        <!-- Developer Console -->
        <activity
            android:name=".model.activity.PMPDeveloperConsoleActivity"
            android:icon="@drawable/icon_dev_console"
            android:label="PMP Dev Console" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- END of the OLD Activities for the OLD gui -->


        <!-- // end of Activity declaration -->


        <!-- The PMPService can be loaded by using the intent action name declared 3 lines below. -->
        <service
            android:name=".service.PMPService"
            android:exported="true" >
            <intent-filter>
                <action android:name="de.unistuttgart.ipvs.pmp.service.PMPService" >
                </action>
            </intent-filter>
        </service>
    </application>

</manifest>