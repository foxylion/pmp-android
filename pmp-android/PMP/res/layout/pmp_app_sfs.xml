<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pmp="http://schemas.android.com/apk/res/de.unistuttgart.ipvs.pmp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <de.unistuttgart.ipvs.pmp.gui.view.BasicTitleView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            pmp:icon="@drawable/icon_success"
            pmp:name="Enabled Service Features" >
        </de.unistuttgart.ipvs.pmp.gui.view.BasicTitleView>

        <ListView
            android:id="@+id/ListView_EnabledSFs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <de.unistuttgart.ipvs.pmp.gui.view.BasicTitleView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            pmp:icon="@drawable/icon_delete"
            pmp:name="Disabled Service Features" >
        </de.unistuttgart.ipvs.pmp.gui.view.BasicTitleView>

        <ListView
            android:id="@+id/ListView_DisabledSFs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>