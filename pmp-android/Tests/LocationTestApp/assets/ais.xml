<?xml version="1.0" encoding="utf-8"?>
<appInformationSet>
	<appInformation>
		<name lang="en">LocationTestApp</name>
		<name lang="de">Ortungs Testapp</name>
		<description lang="en">App for testing the location resource.</description>
		<description lang="de">App um die Ortungsressource zu testen.</description>
	</appInformation>
	<serviceFeatures>
		<serviceFeature identifier="useAbsoluteLocation">
			<name lang="en">View Detailed Location</name>
			<name lang="de">Genaue Position anzeigen</name>
			<description lang="en">Shows the detailed location of the device.</description>
			<description lang="de">Zeigt die genaue Position des Ger√§ts an.</description>
			<requiredResourceGroup
				identifier="de.unistuttgart.ipvs.pmp.resourcegroups.location" minRevision="1">
				<requiredPrivacySetting identifier="useAbsoluteLocation">true</requiredPrivacySetting>
				<requiredPrivacySetting identifier="useCoordinates">true</requiredPrivacySetting>
				<requiredPrivacySetting identifier="useSpeed">true</requiredPrivacySetting>
				<requiredPrivacySetting identifier="useAccuracy">true</requiredPrivacySetting>
				<requiredPrivacySetting identifier="useLocationDescription">STREET</requiredPrivacySetting>
				<requiredPrivacySetting identifier="locationPrecision">10</requiredPrivacySetting>
			</requiredResourceGroup>
		</serviceFeature>
	</serviceFeatures>
</appInformationSet>