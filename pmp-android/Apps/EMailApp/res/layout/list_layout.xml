<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/top_control_bar">
		<LinearLayout android:id="@+id/bottom_control_bar"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:background="#2d2d2d" android:orientation="vertical"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:gravity="center_horizontal">
			<TextView android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:id="@+id/header" android:layout_width="fill_parent" android:gravity="center_horizontal"></TextView>
		</LinearLayout>
	</RelativeLayout>
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="0dip" android:choiceMode="multipleChoice"
		android:layout_below="@id/top_control_bar" android:layout_above="@id/bottom_control_bar"></ListView>
	<TextView android:id="@android:id/empty" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/top_control_bar"
		android:layout_above="@id/bottom_control_bar" />
</RelativeLayout>
