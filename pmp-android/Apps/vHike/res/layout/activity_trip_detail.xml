        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="@color/dark_gray"
                android:ems="10"
                android:singleLine="true">
                <requestFocus />
            </AutoCompleteTextView>
            <ListView
                android:id="@+id/trip_detail_all_messages"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@color/light_gray" >
            </ListView>

        </LinearLayout>
         -->

    </ViewSwitcher>

    <LinearLayout
        android:id="@+id/trip_detail_bottom_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:drawableBottom="@color/dark_gray"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/TextView02"
            style="@style/ActionBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tripDetails_cancel_trip" />

        <TextView
            android:id="@+id/TextView03"
            style="@style/ActionBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tripDetails_edit_trip" android:layout_marginLeft="8dip"/>
        
        <TextView
            android:id="@+id/TextView04"
            style="@style/ActionBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Trip" android:layout_marginLeft="8dip"/>
        
    </LinearLayout>

</LinearLayout>