<?xml version="1.0" encoding="utf-8"?>
<appInformationSet>
	<appInformation>
		<name lang="en">SimpleApp</name>
		<name lang="de">Einfache App</name>
		<description lang="en">Just a simple App.</description>
		<description lang="de">Nur eine einfache App.</description>
	</appInformation>
	<serviceFeatures>
		<serviceFeature identifier="wifiState">
			<name lang="en">View wifi state</name>
			<name lang="de">WLAN-Status anzeigen</name>
			<description lang="en">Shows the current wireless state.</description>
			<description lang="de">Zeigt den akutellen WLAN-Status an.</description>
			<requiredResourceGroup
				identifier="de.unistuttgart.ipvs.pmp.resourcegroups.switches" minRevision="1">
				<requiredPrivacySetting identifier="CanWifiState">true</requiredPrivacySetting>
			</requiredResourceGroup>
		</serviceFeature>
		<serviceFeature identifier="wifiChange">
			<name lang="en">Change wifi state</name>
			<name lang="de">WLAN-Status ändern</name>
			<description lang="en">Ability to change the current wireless state.</description>
			<description lang="de">Lässt es zu den aktuellen WLAN-Status zu ändern.</description>
			<requiredResourceGroup
				identifier="de.unistuttgart.ipvs.pmp.resourcegroups.switches" minRevision="1">
				<requiredPrivacySetting identifier="CanWifiSwitch">true</requiredPrivacySetting>
			</requiredResourceGroup>
		</serviceFeature>
	</serviceFeatures>
</appInformationSet>